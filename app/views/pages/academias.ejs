<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academias</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/academia-mobile.css" media="only screen and (max-width: 768px)">
    <link rel="stylesheet" href="/css/academia.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>

<body>
    <%- include('../partials/header') %>

    <section class="side-menu" id="sideMenu">
        <span class="close-menu" id="closeMenu"><i class="fas fa-times"></i></span>
        <ul class="menu-items">
            <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="/academias"><i class="fas fa-dumbbell"></i> Academias</a></li>
            <li><a href="#"><i class="fas fa-info-circle"></i> Sobre nós</a></li>
            <li><a href="/planos"><i class="fas fa-tags"></i> Planos e Preços</a></li>
        </ul>
    </section>

    <section class="menu-overlay" id="menuOverlay"></section>

    <main>
        <section class="academias-container">
            <h1 class="academias-title">Academias Parceiras</h1>

            <section class="academias-grid">
                <!-- Skyfit -->
                <article class="academia-card">
                    <img src="/images/parceiro2.png" alt="Skyfit" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Skyfit</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>05:00 - 23:00</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico, fit dance e pilates</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>

                <!-- Smart Fit -->
                <article class="academia-card">
                    <img src="/images/parceiro1.png" alt="Smart Fit" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Smart Fit</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>24 horas</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico, fit dance e crossfit</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>

                <!-- Bluefit -->
                <article class="academia-card">
                    <img src="/images/parceiro5.png" alt="Bluefit" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Bluefit</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>05:00 - 23:59</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico, artes marciais e meditação</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>

                <!-- Panoblanco -->
                <article class="academia-card">
                    <img src="/images/parceiro6.png" alt="Panoblanco" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Panoblanco</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>05:00 - 23:00</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico, fit dance e pilates</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>

                <!-- Gavides GYM -->
                <article class="academia-card">
                    <img src="/images/parceiro4.png" alt="Gavides GYM" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Gaviões GYM</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>24 horas</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico, fit dance e meditação</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>

                <!-- Fokar Academia -->
                <article class="academia-card">
                    <img src="/images/parceiro8.png" alt="Fokar Academia" class="academia-imagem">
                    <section class="academia-info">
                        <span class="presencial-badge">Presencial</span>
                        <h2 class="academia-nome">Fokar Academia</h2>
                        <section class="academia-horario">
                            <i class="far fa-clock"></i>
                            <span>06:00 - 22:00</span>
                        </section>
                        <section class="academia-modalidade">
                            <h3>Modalidades:</h3>
                            <p>Musculação, aeróbico e yoga</p>
                        </section>
                    </section>
                    <section class="academia-mapa"></section>
                </article>
            </section>
        </section>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="/js/menu.js"></script>
    <script src="/js/header.js"></script>
    <script src="/js/carrossel.js"></script>
    <script src="/js/academia.js"></script>
</body>
</html>
